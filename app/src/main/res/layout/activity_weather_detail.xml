<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weather_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sathyabamanan.com.tiqriweather.WeatherDetail">

    <TextView
        android:text="21"
        android:layout_below="@+id/detail_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:id="@+id/detail_high_temp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_title"
        tools:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="28sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_temp_type"
        android:layout_below="@+id/detail_high_temp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/wrong_icon"
        android:id="@+id/detail_image"
        android:layout_alignTop="@+id/detail_high_temp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_message"
        android:layout_below="@+id/detail_image"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_temp_type"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:id="@+id/details_tdy_high" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_tdy_high"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/details_tdy_low" />
</RelativeLayout>
